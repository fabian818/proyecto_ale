<h1>Listing course_assignments</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Course</th>
      <th>Schedule</th>
      <th>Hours quantity</th>
      <th>Init date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_assignments.each do |course_assignment| %>
      <tr>
        <td><%= course_assignment.teacher %></td>
        <td><%= course_assignment.course %></td>
        <td><%= course_assignment.schedule %></td>
        <td><%= course_assignment.hours_quantity %></td>
        <td><%= course_assignment.init_date %></td>
        <td><%= link_to 'Show', course_assignment %></td>
        <td><%= link_to 'Edit', edit_course_assignment_path(course_assignment) %></td>
        <td><%= link_to 'Destroy', course_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

