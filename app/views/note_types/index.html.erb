<h1>Listing note_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @note_types.each do |note_type| %>
      <tr>
        <td><%= note_type.name %></td>
        <td><%= note_type.description %></td>
        <td><%= link_to 'Show', note_type %></td>
        <td><%= link_to 'Edit', edit_note_type_path(note_type) %></td>
        <td><%= link_to 'Destroy', note_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note type', new_note_type_path %>
